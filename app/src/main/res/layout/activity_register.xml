<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3FAFAFA"
    tools:context=".Register">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/avenirblack"
        android:text="Welcome to "
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/welcomeText"
        android:fontFamily="@font/avenirblack"
        android:text="Food Share"
        android:textColor="@color/darkyellow"
        android:textSize="25sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SignUpGoogle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/welcomeText"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/button2"
        android:text="Sign Up with Google"
        android:textColor="@color/black"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/or"
        android:layout_below="@id/SignUpGoogle"
        android:layout_centerHorizontal="true"
        android:text="OR"
        android:fontFamily="@font/avenirblack"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirblack"
        android:textSize="15sp"
        android:text="Email"
        android:layout_margin="20dp"
        android:layout_below="@+id/or"
        android:id="@+id/EmailText"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/EmailText"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/credentialsboxbg"
        android:ems="10"
        android:hint="example@google.com"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:backgroundTint="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirblack"
        android:textSize="15sp"
        android:text="Confirm Password"
        android:layout_margin="20dp"
        android:layout_below="@+id/password"
        android:id="@+id/ConfirmPasswordText"
        />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ConfirmPasswordText"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:hint="Confirm Password"
        android:background="@drawable/credentialsboxbg"
        android:ems="10"
        android:inputType="textPassword"
        android:backgroundTint="@color/white"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/showConfirmPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/confirmPassword"
        android:layout_alignEnd="@id/confirmPassword"
        android:layout_marginTop="2dp"
        android:backgroundTint="#00000000"
        android:src="@drawable/ic_twotone_remove_red_eye_24"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/CustomSignUp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/confirmPassword"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/button"
        android:text="Sign Up" />


    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/avenirblack"
        android:text="Login"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirblack"
        android:textSize="15sp"
        android:text="Password"
        android:layout_margin="20dp"
        android:layout_below="@+id/email"
        android:id="@+id/PassText"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:background="@drawable/credentialsboxbg"
        android:hint="Password"
        android:layout_below="@id/PassText"
        android:ems="10"
        android:inputType="textPassword"
        android:backgroundTint="@color/white"
        />

    <ImageButton
        android:id="@+id/showPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/password"
        android:layout_alignEnd="@id/password"
        android:layout_marginTop="2dp"
        android:backgroundTint="#00000000"
        android:src="@drawable/ic_twotone_remove_red_eye_24" />

</RelativeLayout>